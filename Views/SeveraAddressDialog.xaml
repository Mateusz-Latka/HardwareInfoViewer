<Window x:Class="HardwareInfoViewer.Views.ServerAddressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Server Address" Height="150" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Margin="0,0,0,10"><Run Text="Enter server URL ("/><Run Language="pl-pl" Text="server-ip:port"/><Run Text="):"/></TextBlock>
        <TextBox Name="ServerAddressTextBox" Height="25" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Width="75" Margin="0,0,5,0" Click="OkButton_Click">OK</Button>
            <Button Name="CancelButton" Width="75" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>